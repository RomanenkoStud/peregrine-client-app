generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thing {
  id          String @id @default(cuid())
  title       String
  price       Int
  description String

  image String[]
  type  Cathegory[]

  createdAt DateTime @default(now())
}

model Cathegory {
  id    String @id @default(cuid())
  title String

  Thing   Thing?  @relation(fields: [thingId], references: [id])
  thingId String?
}
